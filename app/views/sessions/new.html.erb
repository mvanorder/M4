<% provide(:title, "Log in") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for(:session, url: login_path, :html => {class: 'form-signin'}) do |f| %>
    <h2 class="form-signin-heading">Please sign in</h2>
      <%= f.label :email, "Email address", class: 'sr-only' %>
      <%= f.email_field_without_bootstrap :email, class: 'form-control', placeholder: "Email address" %>
      <%= f.label :password, "Password", class: 'sr-only' %>
      <%= f.password_field_without_bootstrap :password, class: 'form-control', placeholder: "Password" %>
      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
      <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    <% end %>
  </div>
</div>
