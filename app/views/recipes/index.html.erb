<h1>Listing recipes</h1>

<%= link_to 'New recipe', new_recipe_path %>
 
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th></th>
      <th></th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </tfoot>
  <tbody>
  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
      <td><%= link_to 'Remove', recipe_path(recipe),
                                method: :delete,
                                data: {confirm: 'Are you sure you want to delete?' } %></td>
      <td><%= recipe.name %></td>
      <td><%= recipe.directions %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= render 'tablesorter' %>
