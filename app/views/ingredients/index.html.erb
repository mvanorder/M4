<h1>Listing ingredients</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </tfoot>
  <tbody>
  <% @ingredients.each do |ingredient| %>
    <tr>
      <td>
        <%= link_to(raw("<span class=\"glyphicon glyphicon-edit\"></span>"), edit_ingredient_path(ingredient)) %>
        <%= link_to(raw("<span class=\"glyphicon glyphicon-remove\"></span>"), ingredient_path(ingredient),
                              method: :delete,
                              data: {confirm: 'Are you sure you want to delete?' }) %>
      </td>
      <td><%= ingredient.name %></td>
      <td><%= ingredient.description %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= render 'tablesorter' %>
