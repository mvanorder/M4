<h1>Listing ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </tfoot>
  <tbody>
  <% @ingredients.each do |ingredient| %>
    <tr>
      <td><%= ingredient.name %></td>
      <td><%= ingredient.description %></td>
      <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= render 'tablesorter' %>
