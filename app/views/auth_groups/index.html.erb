<h1>Groups</h1>

<%= link_to 'Create auth group', new_auth_group_path %>


<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th></th>
      <th></th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </tfoot>
  <tbody>
  <% @auth_groups.each do |auth_group| %>
    <tr>
      <td><%= link_to 'Edit', edit_auth_group_path(auth_group) %></td>
      <td><%= link_to 'Remove', auth_group_path(auth_group),
                                method: :delete,
                                data: {confirm: 'Are you sure you want to delete?' } %></td>
      <td><%= auth_group.name %></td>
      <td><%= auth_group.description %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= render 'tablesorter' %>
